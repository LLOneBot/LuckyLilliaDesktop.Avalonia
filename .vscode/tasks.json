{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/LuckyLilliaDesktop.csproj",
                "-c",
                "Debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-win",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/LuckyLilliaDesktop.csproj",
                "-c",
                "Release",
                "-r",
                "win-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-osx",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/LuckyLilliaDesktop.csproj",
                "-c",
                "Release",
                "-r",
                "osx-x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-osx-arm64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/LuckyLilliaDesktop.csproj",
                "-c",
                "Release",
                "-r",
                "osx-arm64"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
