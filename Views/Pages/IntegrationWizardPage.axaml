<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LuckyLilliaDesktop.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="LuckyLilliaDesktop.Views.Pages.IntegrationWizardPage"
             x:DataType="vm:IntegrationWizardViewModel">

    <Grid>
        <!-- 未登录提示 -->
        <StackPanel IsVisible="{Binding !HasUin}"
                    Spacing="16"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <PathIcon Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"
                      Width="64" Height="64"
                      Foreground="#F59E0B"/>
            <TextBlock Text="请先启动并登录 QQ"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#F59E0B"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="登录后才能安装配置 Bot 框架"
                       FontSize="16"
                       Foreground="{DynamicResource TextSecondary}"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 框架选择列表（已登录时显示） -->
        <Border Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="28"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                IsVisible="{Binding HasUin}">
            <Panel>
                <StackPanel Spacing="20" IsVisible="{Binding !IsInstalling}">
                <TextBlock Text="选择 Bot 框架"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="选择一个框架后将启动或自动下载并配置"
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondary}"
                           HorizontalAlignment="Center"/>

                <!-- 框架列表 - 使用 UniformGrid 自动分列 -->
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.Items>
                        <!-- Koishi -->
                        <Button Command="{Binding SelectFrameworkCommand}" CommandParameter="koishi"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                Padding="12" Background="Transparent" Margin="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Width="48" Height="48" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="/Assets/Icons/koishi.png" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="Koishi" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <Border Background="#22C55E" CornerRadius="4" Padding="6,2" 
                                                VerticalAlignment="Center" IsVisible="{Binding KoishiInstalled}">
                                            <TextBlock Text="已安装" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="跨平台、可扩展的聊天机器人框架" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- AstrBot -->
                        <Button Command="{Binding SelectFrameworkCommand}" CommandParameter="astrbot"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                Padding="12" Background="Transparent" Margin="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Width="48" Height="48" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="/Assets/Icons/astrbot.png" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="AstrBot" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <Border Background="#22C55E" CornerRadius="4" Padding="6,2" 
                                                VerticalAlignment="Center" IsVisible="{Binding AstrBotInstalled}">
                                            <TextBlock Text="已安装" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="基于大语言模型的聊天机器人" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- 真寻Bot -->
                        <Button Command="{Binding SelectFrameworkCommand}" CommandParameter="zhenxun"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                Padding="12" Background="Transparent" Margin="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Width="48" Height="48" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="/Assets/Icons/zhenxun.png" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="真寻Bot" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <Border Background="#22C55E" CornerRadius="4" Padding="6,2" 
                                                VerticalAlignment="Center" IsVisible="{Binding ZhenxunInstalled}">
                                            <TextBlock Text="已安装" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="基于 Nonebot2 的真寻机器人" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- DDBot -->
                        <Button Command="{Binding SelectFrameworkCommand}" CommandParameter="ddbot"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                Padding="12" Background="Transparent" Margin="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Width="48" Height="48" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="/Assets/Icons/ddbot.png" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="DDBot" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <Border Background="#22C55E" CornerRadius="4" Padding="6,2" 
                                                VerticalAlignment="Center" IsVisible="{Binding DDBotInstalled}">
                                            <TextBlock Text="已安装" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="各种直播/状态推送框架" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- 云崽 -->
                        <Button Command="{Binding SelectFrameworkCommand}" CommandParameter="yunzai"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                Padding="12" Background="Transparent" Margin="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Width="48" Height="48" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="/Assets/Icons/yunzai.png" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="云崽" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <Border Background="#22C55E" CornerRadius="4" Padding="6,2" 
                                                VerticalAlignment="Center" IsVisible="{Binding YunzaiInstalled}">
                                            <TextBlock Text="已安装" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="原神机器人" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>

                        <!-- ZeroBot-Plugin -->
                        <Button Command="{Binding SelectFrameworkCommand}" CommandParameter="zbp"
                                HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                Padding="12" Background="Transparent" Margin="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <Border Width="48" Height="48" CornerRadius="8" ClipToBounds="True">
                                    <Image Source="/Assets/Icons/zbp.png" Stretch="UniformToFill"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center" Spacing="4">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ZeroBot-Plugin" FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="{DynamicResource TextPrimary}"/>
                                        <Border Background="#22C55E" CornerRadius="4" Padding="6,2" 
                                                VerticalAlignment="Center" IsVisible="{Binding ZeroBotPluginInstalled}">
                                            <TextBlock Text="已安装" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="基于 ZeroBot 的多功能群管/娱乐插件集" FontSize="12" 
                                               Foreground="{DynamicResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </ItemsControl.Items>
                </ItemsControl>

            </StackPanel>

            <!-- 安装进度 -->
            <StackPanel Spacing="16" IsVisible="{Binding IsInstalling}">
                <TextBlock Text="安装进度" FontSize="20" FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding CurrentStep, StringFormat='步骤 {0}'}" FontSize="14"
                               Foreground="{DynamicResource PrimaryBrush}"/>
                    <TextBlock Text="/" FontSize="14" Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="{Binding TotalSteps}" FontSize="14" Foreground="{DynamicResource TextSecondary}"/>
                    <TextBlock Text="-" FontSize="14" Foreground="{DynamicResource TextSecondary}" Margin="8,0"/>
                    <TextBlock Text="{Binding CurrentStepName}" FontSize="14" FontWeight="Medium"
                               Foreground="{DynamicResource TextPrimary}"/>
                </StackPanel>

                <ProgressBar Value="{Binding ProgressPercentage}" Minimum="0" Maximum="100" Height="8" CornerRadius="4"/>
                <TextBlock Text="{Binding StatusText}" FontSize="13"
                           Foreground="{DynamicResource TextSecondary}" HorizontalAlignment="Center"/>

                <Border Background="#FEE2E2" CornerRadius="8" Padding="12" IsVisible="{Binding HasError}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#DC2626" TextWrapping="Wrap"/>
                </Border>

                <Border Background="#DCFCE7" CornerRadius="8" Padding="12" IsVisible="{Binding IsCompleted}">
                    <TextBlock Text="安装完成！" Foreground="#16A34A" FontWeight="Medium" HorizontalAlignment="Center"/>
                </Border>

                <Button Content="取消安装" Command="{Binding CancelInstallCommand}"
                        HorizontalAlignment="Center" IsVisible="{Binding !IsCompleted}"
                        Foreground="{DynamicResource DangerColor}"/>
            </StackPanel>
            </Panel>
        </Border>
    </Grid>
</UserControl>
